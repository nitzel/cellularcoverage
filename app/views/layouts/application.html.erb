<%
nav = {
	'Map' => '/',
	'Speed Test' => page_test_path,
	'Presentations' => page_presentations_path,
	'Add measurement' => new_measurement_path
}
%>

<!DOCTYPE html>
<html>
	<head>
		<title>Cellular Coverage | <%= yield :page_name %></title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= stylesheet_link_tag 'http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css' %>
		<%= stylesheet_link_tag 'non-sitewide/leaflet_map' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js' %>
		<%= javascript_include_tag '//speedof.me/api/api.js' %>
		<%= javascript_include_tag 'non-sitewide/location' %>
		<%= javascript_include_tag 'non-sitewide/speed_test' %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div id="main_container">
			<header>
				<h1>Cellular Coverage</h1>
			</header>
			<nav>
				<ul>
					<% nav.each do |name, link| %>
					<li><%= nav_link_to name, link %></li>
					<% end %>
					<br class="clear"/>
				</ul>
			</nav>
			<section>
				<%= yield %>
			</section>
			<footer>
			</footer>
		</div>
	</body>
</html>
